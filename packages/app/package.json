{
  "name": "@apoyo/app",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "types": "./dist/index.d.ts",
  "files": ["./dist"],
  "scripts": {
    "dev": "tsnd --respawn --quiet index.ts",
    "build:folder": "rimraf dist",
    "build:types": "tsc",
    "build:files": "node ./scripts/esbuild.build.mjs",
    "build": "npm-run-all 'build:*'",
    "start": "node ./dist/index.js",
    "env": "gen-env-types .env --types-output ./src/@types/env.d.ts --example-env-path ./ --keep-comments"
  },
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.0.4",
    "esbuild": "^0.14.36",
    "esbuild-node-externals": "^1.4.1",
    "gen-env-types": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0"
  }
}
